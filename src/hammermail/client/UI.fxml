<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="MainAnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="hammermail.client.UIController">
  <children>
    <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      
      <!--top pane-->  
      <top>
        <AnchorPane id="TopAnchorPane">
          <children>
            <HBox prefHeight="40.0" prefWidth="600.0" spacing="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <Label fx:id="user" text="topbar" />
              <Button onAction="#handleCreate" text="generate new mail" />
              <Button onAction="#handleDelete" text="remove mail" />
            </HBox>
          </children>
        </AnchorPane>
      </top>      
      
      <!--center pane-->
      <center>
        <AnchorPane id="CenterAnchorPane">
          <SplitPane dividerPositions="0.20066889632107024" focusTraversable="true" prefHeight="289.0" prefWidth="411.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
              <!-- Left panel -->
              <TabPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                <Tab fx:id="senttab" text="Sent">
                  <!-- Mail list -->
                  <ListView fx:id="listmail" prefHeight="200.0" prefWidth="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                </Tab>
                <Tab fx:id="drafttab" text="Drafts">
                  <ListView fx:id="listdraft" prefHeight="200.0" prefWidth="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                </Tab>
              </TabPane>
              <!-- Right panel -->
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="253.0" prefWidth="215.0">
                <children>
                  <TextArea fx:id="mailcontent" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" editable="false"/>      
                </children>
              </AnchorPane>
            </items>
          </SplitPane>
        </AnchorPane>
      </center>
      
      <!--bottom pane-->
      <bottom>
        <AnchorPane id="BottomAnchorPane">
          <children>
            <HBox prefHeight="40.0" prefWidth="600.0" spacing="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <Label text="bottombar" />
              <Button text="test2" />
              <Button text="test3" />
            </HBox>
          </children>
        </AnchorPane>
      </bottom>
            
    </BorderPane>
  </children>
  
  <!--bind css document-->
  <stylesheets>
    <URL value="@UI.css" />
  </stylesheets>
</AnchorPane>