              <Button onAction="#handleSignup" prefHeight="50.0" prefWidth="150.0" styleClass="lowbutton" text="Sign up" />
              <Button onAction="#handleLogin" prefHeight="50.0" prefWidth="150.0" text="Log in">
               <font>
                  <Font size="25.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
         </children>
